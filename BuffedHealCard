import java.awt.Color;
public class BuffedHealCard extends Card{
	public BuffedHealCard(Color color, String effect, int energy, String name) {
		super(Color.YELLOW, "Using this card gives you a 30% chance to heal by 50% more than the Hero's normal healing amount, otherwise it will decrease health by 15%", 2, "Buffed Heal" );
		
	}
	
	public void use(Hero hero) {
		int health = 0;
		double r = (double)(Math.random()*100) + 1;
		if(r < 30) {
			health += (int)(hero.getHealth()*1.5);
		}
		else {
			health = (int)(hero.getHealth() - (hero.getHealth()*0.15));
		}
		
		
	}
}
